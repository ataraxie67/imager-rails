<%= form_tag({:controller => "comments",:post_id=>post.id, :action => "create"}, :method=>'post',:post_id => post.id, :commit=>"Create Comment") do %>
  
  <div class="field">
   
    <%= text_area_tag :body%>
  </div>
  <div class="actions">
    <%= submit_tag "submit" %>
  </div>
<% end %>


